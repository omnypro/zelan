# Zelan Environment Configuration

# Server Configuration
#ZELAN_WS_PORT=9000
#ZELAN_API_PORT=9001
#ZELAN_MAX_CONNECTIONS=100
#ZELAN_TIMEOUT_SECONDS=300
#ZELAN_PING_INTERVAL=60

# Authentication
#ZELAN_AUTH_REQUIRED=false
#ZELAN_JWT_KEY=your_jwt_secret_key
#ZELAN_JWT_EXPIRATION=86400
#ZELAN_API_KEYS_ENABLED=true
#ZELAN_MAX_API_KEYS=5

# Web interface settings
#ZELAN_CORS_ENABLED=true
#ZELAN_SWAGGER_ENABLED=true

# Twitch Configuration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Logging configuration
RUST_LOG=zelan=info,zelan::core::event_bus=debug,zelan::adapters::obs=debug

# Config file location
#ZELAN_CONFIG_PATH=/path/to/config.json